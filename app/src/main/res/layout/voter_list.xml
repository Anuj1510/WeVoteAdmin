<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="20dp"
    android:elevation="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient2"
        >


        <ImageView
            android:id="@+id/Cancel_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="672dp"
            android:src="@drawable/cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.956"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/CandidateNameAsk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANDIDATE NAME"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/CandidateName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANUJ SHAHI"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/CandidateNameAsk"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/PartyNameAsk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PARTY NAME"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/CandidateName" />

        <TextView
            android:id="@+id/PartyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BJP"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/PartyNameAsk"
            android:layout_marginBottom="20dp"
            />

        <ImageView
            android:id="@+id/RegisterProfileImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/candidate1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PartyName" />

        <TextView
            android:id="@+id/RegisterTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Profile Photo"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RegisterProfileImage" />

        <ImageView
            android:id="@+id/ClickedVoterImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/candidate1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PartyName" />

        <TextView
            android:id="@+id/ClickedVoterTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Voter Photo"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.798"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ClickedVoterImage" />

        <ImageView
            android:id="@+id/VoterAadharCardImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/candidate1"
            app:layout_constraintTop_toBottomOf="@+id/RegisterProfileImage"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/AadharCardTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Aadhar Card Photo"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/VoterAadharCardImage" />

        <Button
            android:id="@+id/Vote_to_candidate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Verify the Voter"
            android:backgroundTint="#046A38"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/VoterAadharCardImage"
            android:layout_marginTop="40dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>





</com.google.android.material.card.MaterialCardView>